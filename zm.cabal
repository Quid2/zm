name:               zm
version:            0.3.7
synopsis:           Language independent, reproducible, absolute types
description:        See the <http://github.com/Quid2/zm online tutorial>.
homepage:           http://github.com/Quid2/zm
category:           Data,Reflection
license:            BSD3
license-file:       LICENSE
author:             Pasqualino `Titto` Assini
maintainer:         tittoassini@gmail.com
copyright:          Copyright: (c) 2016-2019 Pasqualino `Titto` Assini
cabal-version:      >=1.10
build-type:         Simple
tested-with:
  GHC ==7.10.3 || ==8.0.2 || ==8.2.2 || ==8.4.4 || ==8.6.5

extra-source-files:
  stack.yaml
  README.md

source-repository head
  type:     git
  location: https://github.com/Quid2/zm

library
  exposed-modules:
    Data.Digest.Keccak
    Data.List.Extra
    ZM
    ZM.Abs
    ZM.BLOB
    ZM.Dynamic
    ZM.Model
    ZM.Pretty
    ZM.Pretty.Base
    ZM.Pretty.Value
    ZM.Transform
    ZM.Type.Array
    ZM.Type.BLOB
    ZM.Type.Bit
    ZM.Type.Bits11
    ZM.Type.Bits23
    ZM.Type.Bits52
    ZM.Type.Bits8
    ZM.Type.Char
    ZM.Type.Float32
    ZM.Type.Float64
    ZM.Type.Function
    ZM.Type.Generate
    ZM.Type.List
    ZM.Type.Map
    ZM.Type.NonEmptyList
    ZM.Type.Repo
    ZM.Type.Repo0
    ZM.Type.String
    ZM.Type.Tuples
    ZM.Type.Unit
    ZM.Type.Words
    ZM.Types
    ZM.Util

  -- ZM.Coerce
  if impl(ghcjs -any)
    build-depends: ghcjs-base ==0.2.*

  else
    build-depends:
        cryptonite  >=0.22 && <1
      , memory

  build-depends:
      base          >=4.8      && <5
    , bytestring    >=0.10.6.0 && <0.11
    , containers
    , deepseq       >=1.4      && <1.5
    , either        >4.3.2    && <6
    , flat          >=0.3      && <0.4
    , model         >=0.5
    , pretty        >=1.1.2    && <1.2
    , text
    , transformers  >=0.4.2.0  && <0.6

  -- convertible == 1.1.*,
  -- 0.4.4 && < 0.6,
  js-sources:       jsbits/sha3.js
  default-language: Haskell2010
  hs-source-dirs:   src

  -- ghc-options: -O2 -funbox-strict-fields -Wall -fno-warn-orphans -fno-warn-name-shadowing
  if impl(ghc >8)
    ghc-options:
      -Wall -funbox-strict-fields -fno-warn-orphans
      -fno-warn-name-shadowing -Wincomplete-record-updates
      -Wincomplete-uni-patterns -Wredundant-constraints

-- -Werror

test-suite spec
  type:             exitcode-stdio-1.0
  main-is:          Spec.hs
  build-depends:
      base
    , bytestring
    , containers
    , flat
    , model
    , pretty
    , tasty             >=0.11
    , tasty-hunit       >=0.8
    , tasty-quickcheck  >=0.8.1
    , text
    , timeit            >=1
    , zm

  default-language: Haskell2010
  hs-source-dirs:   test
  other-modules:
    Info
    Test.Data
    Test.Data.Flat
    Test.Data.Model
    Test.Data2
    Test.Data2.Flat
    Test.Data3
    Test.Data3.Flat
