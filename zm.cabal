  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  ghc-options:      -threaded
  main-is:          DocSpec.hs
  build-depends:
      base
    , doctest    >=0.11.1
    , filemanip  >=0.3.6.3
    , zm

  hs-source-dirs:   test
